<Window x:Class="TgdSoundboard.Views.HotkeyDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Set Hotkey"
        Width="350" Height="200"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Border Background="{DynamicResource ThemeBgSecondaryBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource ThemeAccentBrush}"
            BorderThickness="1">
        <Grid Margin="24">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Title -->
            <TextBlock Text="Set Hotkey"
                       FontSize="18"
                       FontWeight="Bold"
                       Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>

            <!-- Hotkey Display -->
            <StackPanel Grid.Row="1" VerticalAlignment="Center">
                <TextBlock Text="Press a key combination..."
                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                           FontSize="12"
                           Margin="0,0,0,8"/>
                <Border Background="{DynamicResource ThemeBgTertiaryBrush}"
                        CornerRadius="8"
                        Padding="16,12"
                        MinWidth="200"
                        HorizontalAlignment="Center">
                    <TextBlock x:Name="HotkeyDisplay"
                               Text="None"
                               FontSize="16"
                               FontWeight="Medium"
                               HorizontalAlignment="Center"
                               Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                </Border>
            </StackPanel>

            <!-- Buttons -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <Button Content="Clear"
                        Click="Clear_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                        Margin="0,0,8,0"/>
                <Button Content="Cancel"
                        Click="Cancel_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                        Margin="0,0,8,0"/>
                <Button Content="Save"
                        Click="Save_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="{DynamicResource ThemeAccentBrush}"
                        Foreground="White"
                        Padding="16,8"/>
            </StackPanel>
        </Grid>
    </Border>
</Window>
