<Window x:Class="TgdSoundboard.Views.AppRoutingWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        mc:Ignorable="d"
        Title="App Audio Routing"
        Height="550" Width="650"
        WindowStartupLocation="CenterOwner"
        Background="{StaticResource DarkBgBrush}"
        TextElement.Foreground="White"
        FontFamily="{DynamicResource MaterialDesignFont}">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="24,20">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left">
                    <TextBlock Text="APP AUDIO ROUTING" FontSize="20" FontWeight="Bold"/>
                    <TextBlock Text="Capture audio from specific applications" Opacity="0.7" Margin="0,4,0,0"/>
                </StackPanel>
                <Button DockPanel.Dock="Right"
                        Click="Refresh_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="#40FFFFFF"
                        Foreground="White"
                        Padding="16,8"
                        VerticalAlignment="Center"
                        materialDesign:ButtonAssist.CornerRadius="8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="Refresh" VerticalAlignment="Center"/>
                        <TextBlock Text="REFRESH" Margin="8,0,0,0" FontWeight="Bold"/>
                    </StackPanel>
                </Button>
            </DockPanel>
        </Border>

        <!-- App List -->
        <Border Grid.Row="1" Background="{StaticResource SidebarBgBrush}" Margin="20" CornerRadius="12">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8">
                <ItemsControl x:Name="AppList">
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Border Background="#20FFFFFF" CornerRadius="8" Margin="8" Padding="16">
                                <Grid>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="*"/>
                                        <ColumnDefinition Width="Auto"/>
                                        <ColumnDefinition Width="Auto"/>
                                    </Grid.ColumnDefinitions>

                                    <!-- App Icon -->
                                    <Border Grid.Column="0" Width="40" Height="40" CornerRadius="8" Background="{StaticResource NeonPurpleBrush}" Margin="0,0,16,0">
                                        <materialDesign:PackIcon Kind="Application" Width="24" Height="24"
                                                                 HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>

                                    <!-- App Name -->
                                    <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                        <TextBlock Text="{Binding DisplayName}" FontSize="14" FontWeight="Medium" TextTrimming="CharacterEllipsis"/>
                                        <TextBlock Text="{Binding ProcessName}" FontSize="11" Opacity="0.5"/>
                                    </StackPanel>

                                    <!-- Volume Slider -->
                                    <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="16,0">
                                        <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Opacity="0.5" Margin="0,0,8,0"/>
                                        <Slider Width="100" Minimum="0" Maximum="1" Value="{Binding Volume}"
                                                ValueChanged="VolumeSlider_ValueChanged"
                                                Tag="{Binding ProcessId}"/>
                                    </StackPanel>

                                    <!-- Capture Toggle -->
                                    <StackPanel Grid.Column="3" Orientation="Horizontal" VerticalAlignment="Center">
                                        <TextBlock Text="CAPTURE" FontSize="10" FontWeight="Bold"
                                                   Foreground="{StaticResource NeonGreenBrush}"
                                                   VerticalAlignment="Center" Margin="0,0,8,0"/>
                                        <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                                      IsChecked="{Binding RouteToVirtualCable}"
                                                      Click="CaptureToggle_Click"
                                                      Tag="{Binding ProcessId}"/>
                                    </StackPanel>
                                </Grid>
                            </Border>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </ScrollViewer>
        </Border>

        <!-- Footer Info -->
        <Border Grid.Row="2" Padding="24,16" Background="#10FFFFFF">
            <StackPanel>
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <materialDesign:PackIcon Kind="InformationOutline" Foreground="{StaticResource NeonBlueBrush}"
                                             VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Enable 'Capture' to route an app's audio through the virtual cable."
                               Opacity="0.7" VerticalAlignment="Center"/>
                </StackPanel>
                <TextBlock Text="Tip: Use this to send game audio, music, or browser audio to your stream."
                           Opacity="0.4" HorizontalAlignment="Center" Margin="0,8,0,0" FontSize="11"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>
