<Window x:Class="TgdSoundboard.Views.StreamlabsSettingsDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Streamlabs Settings"
        Height="350" Width="450"
        WindowStartupLocation="CenterOwner"
        Background="{DynamicResource ThemeBgPrimaryBrush}"
        TextElement.Foreground="{DynamicResource ThemeTextPrimaryBrush}"
        FontFamily="{DynamicResource MaterialDesignFont}"
        ResizeMode="NoResize"
        ShowInTaskbar="False">

    <Grid Margin="24">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0,0,0,20">
            <materialDesign:PackIcon Kind="Twitch" Width="28" Height="28" VerticalAlignment="Center" Foreground="#9146FF"/>
            <TextBlock Text="Streamlabs Desktop Integration" FontSize="18" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
        </StackPanel>

        <!-- Token Input -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="API Token" FontWeight="Medium" Margin="0,0,0,8"/>
            <TextBox x:Name="TokenTextBox"
                     Style="{StaticResource MaterialDesignOutlinedTextBox}"
                     materialDesign:HintAssist.Hint="Paste your token here"
                     Background="{DynamicResource ThemeBgSecondaryBrush}"/>
            <TextBlock Text="Find this in Streamlabs: Settings → Remote Control → QR Code → Show Details"
                       FontSize="11"
                       Foreground="{DynamicResource ThemeTextMutedBrush}"
                       TextWrapping="Wrap"
                       Margin="0,4,0,0"/>
        </StackPanel>

        <!-- Auto Connect -->
        <CheckBox x:Name="AutoConnectCheckBox"
                  Grid.Row="2"
                  Content="Auto-connect on startup"
                  Margin="0,0,0,16"
                  Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>

        <!-- Status -->
        <Border Grid.Row="3"
                Background="{DynamicResource ThemeBgSecondaryBrush}"
                CornerRadius="8"
                Padding="12"
                Margin="0,0,0,16">
            <StackPanel>
                <TextBlock Text="Connection Status" FontWeight="Medium" Margin="0,0,0,8"/>
                <StackPanel Orientation="Horizontal">
                    <Ellipse x:Name="StatusIndicator" Width="10" Height="10" Fill="#F44336" VerticalAlignment="Center"/>
                    <TextBlock x:Name="StatusText" Text="Not connected" Margin="8,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <StackPanel Grid.Row="5" Orientation="Horizontal" HorizontalAlignment="Right">
            <Button x:Name="TestButton"
                    Content="Test Connection"
                    Click="TestConnection_Click"
                    Style="{StaticResource MaterialDesignOutlinedButton}"
                    Margin="0,0,12,0"/>
            <Button x:Name="SaveButton"
                    Content="Save"
                    Click="Save_Click"
                    Style="{StaticResource MaterialDesignFlatButton}"
                    Background="{DynamicResource ThemeAccentBrush}"
                    Foreground="White"/>
        </StackPanel>
    </Grid>
</Window>
