<Window x:Class="TgdSoundboard.Views.QueueWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="Sound Queue"
        Width="350" Height="400"
        WindowStartupLocation="CenterOwner"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Transparent">

    <Border Background="{DynamicResource ThemeBgSecondaryBrush}"
            CornerRadius="12"
            BorderBrush="{DynamicResource ThemeAccentBrush}"
            BorderThickness="1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Header -->
            <Border Grid.Row="0" Background="{DynamicResource ThemeBgTertiaryBrush}" CornerRadius="12,12,0,0" Padding="16,12" MouseLeftButtonDown="Header_MouseLeftButtonDown">
                <DockPanel>
                    <Button DockPanel.Dock="Right" Click="Close_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Padding="4" Width="28" Height="28">
                        <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                    </Button>
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="PlaylistPlay" VerticalAlignment="Center" Margin="0,0,8,0"/>
                        <TextBlock Text="Sound Queue" FontSize="16" FontWeight="Bold" VerticalAlignment="Center"/>
                    </StackPanel>
                </DockPanel>
            </Border>

            <!-- Queue List -->
            <ListBox Grid.Row="1"
                     x:Name="QueueList"
                     ItemsSource="{Binding QueuedClips}"
                     Background="Transparent"
                     BorderThickness="0"
                     Margin="8">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Background="{DynamicResource ThemeBgCardBrush}"
                                CornerRadius="8"
                                Padding="12,8"
                                Margin="0,4">
                            <DockPanel>
                                <Button DockPanel.Dock="Right"
                                        Click="RemoveFromQueue_Click"
                                        Style="{StaticResource MaterialDesignFlatButton}"
                                        Padding="4" Width="28" Height="28"
                                        ToolTip="Remove from queue">
                                    <materialDesign:PackIcon Kind="Close" Width="14" Height="14"/>
                                </Button>
                                <StackPanel Orientation="Horizontal">
                                    <Ellipse Width="10" Height="10" Margin="0,0,10,0">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}" VerticalAlignment="Center"/>
                                </StackPanel>
                            </DockPanel>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>

            <!-- Empty State -->
            <StackPanel Grid.Row="1"
                        HorizontalAlignment="Center"
                        VerticalAlignment="Center"
                        Visibility="{Binding HasQueuedClips, Converter={StaticResource InverseBoolToVisConverter}}">
                <materialDesign:PackIcon Kind="PlaylistRemove" Width="48" Height="48"
                                         Foreground="{DynamicResource ThemeTextMutedBrush}"
                                         HorizontalAlignment="Center"/>
                <TextBlock Text="Queue is empty"
                           Foreground="{DynamicResource ThemeTextMutedBrush}"
                           Margin="0,8,0,0"/>
            </StackPanel>

            <!-- Actions -->
            <Border Grid.Row="2" Background="{DynamicResource ThemeBgTertiaryBrush}" CornerRadius="0,0,12,12" Padding="16,12">
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                    <Button Click="PlayNext_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{DynamicResource ThemeAccentBrush}"
                            Foreground="White"
                            Padding="16,8"
                            Margin="0,0,8,0"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            IsEnabled="{Binding HasQueuedClips}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="SkipNext" VerticalAlignment="Center"/>
                            <TextBlock Text="Play Next" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button Click="ClearQueue_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{DynamicResource ThemeDangerBrush}"
                            Foreground="White"
                            Padding="16,8"
                            materialDesign:ButtonAssist.CornerRadius="8"
                            IsEnabled="{Binding HasQueuedClips}">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="PlaylistRemove" VerticalAlignment="Center"/>
                            <TextBlock Text="Clear" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Window>
