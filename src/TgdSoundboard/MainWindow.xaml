<Window x:Class="TgdSoundboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TgdSoundboard"
        mc:Ignorable="d"
        Title="TGD Soundboard"
        Height="750" Width="1200"
        MinHeight="550" MinWidth="900"
        Background="{StaticResource DarkBgBrush}"
        TextElement.Foreground="White"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header with gradient -->
        <Border Grid.Row="0" Background="{StaticResource HeaderGradient}" Padding="20,16">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <Border Background="{StaticResource NeonPinkBrush}" CornerRadius="8" Padding="8,4" VerticalAlignment="Center">
                        <materialDesign:PackIcon Kind="VolumeHigh" Width="24" Height="24"/>
                    </Border>
                    <TextBlock Text="TGD SOUNDBOARD" FontSize="22" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center">
                        <TextBlock.Effect>
                            <DropShadowEffect Color="#FF006E" BlurRadius="15" ShadowDepth="0" Opacity="0.5"/>
                        </TextBlock.Effect>
                    </TextBlock>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Master Volume -->
                    <Border Background="#40000000" CornerRadius="20" Padding="16,8" Margin="0,0,12,0">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Foreground="{StaticResource NeonGreenBrush}"/>
                            <Slider x:Name="MasterVolumeSlider"
                                    Width="100"
                                    Minimum="0" Maximum="1"
                                    Value="{Binding MasterVolume}"
                                    VerticalAlignment="Center"
                                    Margin="8,0"/>
                            <TextBlock Text="{Binding MasterVolume, StringFormat={}{0:P0}}"
                                       Width="40"
                                       VerticalAlignment="Center"
                                       Foreground="{StaticResource NeonGreenBrush}"
                                       FontWeight="Bold"/>
                        </StackPanel>
                    </Border>

                    <!-- Stop All Button -->
                    <Button Click="StopAll_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="#E0FF006E"
                            Foreground="White"
                            Padding="16,8"
                            materialDesign:ButtonAssist.CornerRadius="20">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                            <TextBlock Text="STOP ALL" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="240"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category Sidebar -->
            <Border Grid.Column="0" Background="{StaticResource SidebarBgBrush}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Padding="16,20,16,12">
                        <TextBlock Text="C A T E G O R I E S" FontSize="11" FontWeight="Bold" Foreground="{StaticResource NeonPurpleBrush}"/>
                    </Border>

                    <!-- Add Category Button - NOW AT BOTTOM -->
                    <Border DockPanel.Dock="Bottom" Padding="12" Background="#20000000">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding AddCategoryCommand}"
                                BorderBrush="{StaticResource NeonPurpleBrush}"
                                Foreground="{StaticResource NeonPurpleBrush}"
                                HorizontalAlignment="Stretch"
                                Height="40"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="ADD CATEGORY" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Medium"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Category List -->
                    <ListBox ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,14" Margin="8,2" CornerRadius="8" x:Name="ItemBorder">
                                    <DockPanel>
                                        <Border Width="4" CornerRadius="2" Margin="0,0,14,0" DockPanel.Dock="Left">
                                            <Border.Background>
                                                <SolidColorBrush Color="{Binding Color}"/>
                                            </Border.Background>
                                        </Border>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"/>
                                            <TextBlock FontSize="11" Opacity="0.5" Margin="0,2,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} clips">
                                                        <Binding Path="Clips.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="#30FFFFFF"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Sound Clips Grid -->
            <Grid Grid.Column="1" Background="{StaticResource DarkBgBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Header -->
                <Border Grid.Row="0" Padding="24,20" Background="#10FFFFFF">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='Select a Category'}"
                                       FontSize="28" FontWeight="Bold">
                                <TextBlock.Effect>
                                    <DropShadowEffect Color="{StaticResource NeonPurple}" BlurRadius="20" ShadowDepth="0" Opacity="0.3"/>
                                </TextBlock.Effect>
                            </TextBlock>
                            <TextBlock Opacity="0.5" Margin="0,4,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} sound clips">
                                        <Binding Path="SelectedCategory.Clips.Count" FallbackValue="0"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button Click="ImportClip_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{StaticResource NeonPurpleBrush}"
                                    Foreground="White"
                                    Padding="16,10"
                                    Margin="0,0,8,0"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="FileMusic" VerticalAlignment="Center"/>
                                    <TextBlock Text="IMPORT" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                            <Button Click="ImportAndTrim_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{StaticResource NeonPinkBrush}"
                                    Foreground="White"
                                    Padding="16,10"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentCut" VerticalAlignment="Center"/>
                                    <TextBlock Text="CLIP FROM SONG" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Clips Grid -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                    <ItemsControl ItemsSource="{Binding SelectedCategory.Clips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="150" Height="110"
                                        Margin="8"
                                        CornerRadius="12"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ClipCard_Click"
                                        x:Name="ClipBorder">
                                    <Border.Background>
                                        <SolidColorBrush Color="{StaticResource CardBg}"/>
                                    </Border.Background>
                                    <Border.Effect>
                                        <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.3"/>
                                    </Border.Effect>
                                    <Grid>
                                        <!-- Glow border when playing -->
                                        <Border x:Name="GlowBorder" CornerRadius="12" BorderThickness="2" Opacity="0">
                                            <Border.BorderBrush>
                                                <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                    <GradientStop Color="{StaticResource NeonGreen}" Offset="0"/>
                                                    <GradientStop Color="{StaticResource NeonBlue}" Offset="1"/>
                                                </LinearGradientBrush>
                                            </Border.BorderBrush>
                                        </Border>

                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <!-- Play/Stop Icon -->
                                            <Border x:Name="IconBorder"
                                                    Width="48" Height="48"
                                                    CornerRadius="24"
                                                    Background="{StaticResource AccentGradient}"
                                                    HorizontalAlignment="Center">
                                                <materialDesign:PackIcon x:Name="PlayIcon"
                                                                         Kind="Play"
                                                                         Width="24" Height="24"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Text="{Binding Name}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextAlignment="Center"
                                                       MaxWidth="130"
                                                       FontSize="12"
                                                       FontWeight="Medium"
                                                       Margin="8,10,8,0"/>

                                            <!-- Hotkey badge -->
                                            <Border Background="#40FFFFFF"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="0,6,0,0"
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding Hotkey, Converter={StaticResource EmptyToCollapsed}}">
                                                <TextBlock Text="{Binding Hotkey}" FontSize="10" Opacity="0.8"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Context menu -->
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit" Click="EditClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Pencil"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Delete" Click="DeleteClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Delete"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter TargetName="GlowBorder" Property="Opacity" Value="1"/>
                                        <Setter TargetName="PlayIcon" Property="Kind" Value="Stop"/>
                                        <Setter TargetName="IconBorder" Property="Background" Value="{StaticResource PlayingGradient}"/>
                                        <Setter TargetName="ClipBorder" Property="Effect">
                                            <Setter.Value>
                                                <DropShadowEffect Color="{StaticResource NeonGreen}" BlurRadius="20" ShadowDepth="0" Opacity="0.5"/>
                                            </Setter.Value>
                                        </Setter>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty state -->
                <Border Grid.Row="1"
                        Visibility="{Binding SelectedCategory.Clips.Count, Converter={StaticResource ZeroToVisible}, FallbackValue=Visible}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="{StaticResource AccentGradient}" Width="80" Height="80" CornerRadius="40" Opacity="0.3">
                            <materialDesign:PackIcon Kind="MusicNote" Width="40" Height="40"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <TextBlock Text="No clips yet" FontSize="20" FontWeight="Medium" Opacity="0.5" Margin="0,20,0,8" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drag and drop audio files or click Import" Opacity="0.3" HorizontalAlignment="Center"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Audio Routing Bar -->
        <Border Grid.Row="2"
                Background="{StaticResource SidebarBgBrush}"
                Padding="20,14">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Virtual Cable -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Border Background="{StaticResource NeonBlueBrush}" Width="32" Height="32" CornerRadius="6" Margin="0,0,12,0">
                        <materialDesign:PackIcon Kind="CableData" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                    </Border>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock Text="V I R T U A L  C A B L E" FontSize="10" FontWeight="Bold" Foreground="{StaticResource NeonBlueBrush}"/>
                        <ComboBox ItemsSource="{Binding OutputDevices}"
                                  SelectedItem="{Binding SelectedVirtualCableDevice}"
                                  DisplayMemberPath="Name"
                                  Width="220"
                                  Margin="0,4,0,0"
                                  Style="{StaticResource MaterialDesignComboBox}"/>
                    </StackPanel>

                    <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="{Binding IsRoutingActive}"
                                  Command="{Binding ToggleRoutingCommand}"
                                  Margin="20,0,0,0"
                                  VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding IsRoutingActive, Converter={StaticResource BoolToPlayPause}}"
                               VerticalAlignment="Center"
                               Margin="8,0,0,0"
                               FontWeight="Bold"
                               Foreground="{StaticResource NeonGreenBrush}"/>
                </StackPanel>

                <!-- App Routing Button -->
                <Button Grid.Column="1"
                        Click="OpenAppRouting_Click"
                        Style="{StaticResource MaterialDesignFlatButton}"
                        Background="#30FFFFFF"
                        Foreground="White"
                        Padding="20,10"
                        materialDesign:ButtonAssist.CornerRadius="8">
                    <StackPanel Orientation="Horizontal">
                        <materialDesign:PackIcon Kind="ApplicationCog" VerticalAlignment="Center"/>
                        <TextBlock Text="APP ROUTING" Margin="8,0,0,0" VerticalAlignment="Center" FontWeight="Bold"/>
                    </StackPanel>
                </Button>

                <!-- Pass-through options -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox Content="Pass System Audio"
                              IsChecked="{Binding PassSystemAudio}"
                              Foreground="White"
                              Margin="0,0,24,0"/>

                    <CheckBox Content="Pass Microphone"
                              IsChecked="{Binding PassMicrophone}"
                              Foreground="White"
                              Margin="0,0,16,0"/>

                    <ComboBox ItemsSource="{Binding InputDevices}"
                              SelectedItem="{Binding SelectedInputDevice}"
                              DisplayMemberPath="Name"
                              Width="180"
                              Style="{StaticResource MaterialDesignComboBox}"
                              Visibility="{Binding PassMicrophone, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
