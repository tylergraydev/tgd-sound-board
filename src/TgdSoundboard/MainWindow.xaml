<Window x:Class="TgdSoundboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TgdSoundboard"
        mc:Ignorable="d"
        Title="TGD Soundboard"
        Icon="app.ico"
        Height="750" Width="1200"
        MinHeight="550" MinWidth="900"
        Background="{DynamicResource ThemeBgPrimaryBrush}"
        TextElement.Foreground="{DynamicResource ThemeTextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeHeaderGradient}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Window Controls Row -->
                <DockPanel Grid.Row="0" Height="32">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <Button Click="Minimize_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                        </Button>
                        <Button Click="Maximize_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon x:Name="MaximizeIcon" Kind="WindowMaximize" Width="16" Height="16"/>
                        </Button>
                        <Button Click="Close_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                    <TextBlock Text="" DockPanel.Dock="Left"/>
                </DockPanel>

                <!-- Header Content -->
                <DockPanel Grid.Row="1" Margin="20,0,20,16">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <!-- Neon Pulse Logo -->
                        <Border Background="#12121c" CornerRadius="8" Padding="6" VerticalAlignment="Center" Width="40" Height="40">
                            <Canvas Width="28" Height="28">
                                <!-- Audio bars with neon gradients -->
                                <Rectangle Canvas.Left="1" Canvas.Top="11" Width="3" Height="9" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00f0ff" Offset="0"/>
                                            <GradientStop Color="#00c4cc" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Canvas.Left="6" Canvas.Top="6" Width="3" Height="16" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#00f0ff" Offset="0"/>
                                            <GradientStop Color="#8844ff" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Canvas.Left="11" Canvas.Top="8" Width="3" Height="12" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#8844ff" Offset="0"/>
                                            <GradientStop Color="#ff00aa" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Canvas.Left="16" Canvas.Top="3" Width="3" Height="22" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#8844ff" Offset="0"/>
                                            <GradientStop Color="#ff00aa" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Canvas.Left="21" Canvas.Top="7" Width="3" Height="14" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#ff00aa" Offset="0"/>
                                            <GradientStop Color="#ff0066" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                                <Rectangle Canvas.Left="26" Canvas.Top="10" Width="3" Height="8" RadiusX="1.5" RadiusY="1.5">
                                    <Rectangle.Fill>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
                                            <GradientStop Color="#ff00aa" Offset="0"/>
                                            <GradientStop Color="#ff0066" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Rectangle.Fill>
                                </Rectangle>
                            </Canvas>
                        </Border>
                        <TextBlock Text="TGD SOUNDBOARD" FontSize="18" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <!-- Theme Selector -->
                        <ComboBox x:Name="ThemeSelector"
                                  Width="100"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  SelectionChanged="ThemeSelector_SelectionChanged">
                            <ComboBoxItem Content="Purple" Tag="Purple"/>
                            <ComboBoxItem Content="Cyan" Tag="Cyan"/>
                            <ComboBoxItem Content="Neon" Tag="Neon" IsSelected="True"/>
                        </ComboBox>

                        <!-- Mixer Button -->
                        <Button Click="OpenMixer_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="{DynamicResource ThemeBgTertiaryBrush}"
                                Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                Padding="12,6"
                                Margin="0,0,12,0"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TuneVertical" VerticalAlignment="Center"/>
                                <TextBlock Text="Mixer" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Master Volume -->
                        <Border Background="{DynamicResource ThemeBgTertiaryBrush}" CornerRadius="8" Padding="12,6" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Slider x:Name="MasterVolumeSlider"
                                        Width="80"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding MasterVolume}"
                                        VerticalAlignment="Center"
                                        Margin="8,0"/>
                                <TextBlock Text="{Binding MasterVolume, StringFormat={}{0:P0}}"
                                           Width="40"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Queue Button -->
                        <Button x:Name="QueueButton"
                                Click="ShowQueue_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="{DynamicResource ThemeBgTertiaryBrush}"
                                Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                Padding="12,6"
                                Margin="0,0,12,0"
                                materialDesign:ButtonAssist.CornerRadius="8"
                                Visibility="{Binding HasQueuedClips, Converter={StaticResource BooleanToVisibilityConverter}}">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="PlaylistPlay" VerticalAlignment="Center"/>
                                <TextBlock Text="{Binding QueueCount, StringFormat=Queue ({0})}" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Stop All Button -->
                        <Button Click="StopAll_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="{DynamicResource ThemeDangerBrush}"
                                Foreground="White"
                                Padding="12,6"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                                <TextBlock Text="Stop All" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource ThemeBgSecondaryBrush}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Padding="16,16,16,8">
                        <TextBlock Text="CATEGORIES" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    </Border>

                    <!-- Add Category Button - AT BOTTOM -->
                    <Border DockPanel.Dock="Bottom" Padding="12" Background="{DynamicResource ThemeBgTertiaryBrush}">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding AddCategoryCommand}"
                                BorderBrush="{DynamicResource ThemeTextMutedBrush}"
                                Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                                HorizontalAlignment="Stretch"
                                Height="36"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="Add Category" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Category List -->
                    <ListBox ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,10" Margin="6,2" CornerRadius="{DynamicResource ThemeCornerRadius}" x:Name="ItemBorder">
                                    <DockPanel>
                                        <Border Width="3" CornerRadius="2" Margin="0,0,12,0" DockPanel.Dock="Left"
                                                Background="{DynamicResource ThemeAccentBrush}"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"/>
                                            <TextBlock FontSize="11" Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,2,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} clips">
                                                        <Binding Path="Clips.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ThemeBgTertiaryBrush}"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Sound Clips Grid -->
            <Grid Grid.Column="1" Background="{DynamicResource ThemeBgPrimaryBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Header -->
                <Border Grid.Row="0" Padding="24,16" Background="{DynamicResource ThemeBgSecondaryBrush}">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='General'}"
                                       FontSize="24" FontWeight="Bold"/>
                            <TextBlock Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,4,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} sound clips">
                                        <Binding Path="SelectedCategory.Clips.Count" FallbackValue="0"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <!-- Search Box -->
                            <Border Background="{DynamicResource ThemeBgTertiaryBrush}"
                                    CornerRadius="8"
                                    Padding="8,4"
                                    Margin="0,0,12,0"
                                    VerticalAlignment="Center">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Magnify"
                                                             VerticalAlignment="Center"
                                                             Foreground="{DynamicResource ThemeTextMutedBrush}"
                                                             Margin="0,0,8,0"/>
                                    <TextBox x:Name="SearchBox"
                                             Width="150"
                                             BorderThickness="0"
                                             Background="Transparent"
                                             Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                             materialDesign:HintAssist.Hint="Search clips..."
                                             materialDesign:HintAssist.Foreground="{DynamicResource ThemeTextMutedBrush}"
                                             materialDesign:TextFieldAssist.DecorationVisibility="Hidden"
                                             VerticalAlignment="Center"
                                             TextChanged="SearchBox_TextChanged"/>
                                </StackPanel>
                            </Border>
                            <!-- Random Play -->
                            <Button Click="RandomPlay_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{DynamicResource ThemeBgTertiaryBrush}"
                                    Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                    Padding="10,8"
                                    Margin="0,0,8,0"
                                    ToolTip="Play Random Clip"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <materialDesign:PackIcon Kind="Shuffle" VerticalAlignment="Center"/>
                            </Button>
                            <Button Click="ImportAndTrim_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{DynamicResource ThemeBgTertiaryBrush}"
                                    Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                    Padding="14,8"
                                    Margin="0,0,8,0"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentCut" VerticalAlignment="Center"/>
                                    <TextBlock Text="Clip from Song" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Click="ImportClip_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{DynamicResource ThemeAccentBrush}"
                                    Foreground="White"
                                    Padding="14,8"
                                    Margin="0,0,8,0"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Upload" VerticalAlignment="Center"/>
                                    <TextBlock Text="Import" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <!-- More menu for import/export config -->
                            <Menu Background="Transparent">
                                <MenuItem Padding="0">
                                    <MenuItem.Header>
                                        <Border Background="{DynamicResource ThemeBgTertiaryBrush}"
                                                CornerRadius="8"
                                                Padding="10,8">
                                            <materialDesign:PackIcon Kind="DotsVertical"/>
                                        </Border>
                                    </MenuItem.Header>
                                    <MenuItem Header="Export Config" Click="ExportConfig_Click">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Export"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                    <MenuItem Header="Import Config" Click="ImportConfig_Click">
                                        <MenuItem.Icon>
                                            <materialDesign:PackIcon Kind="Import"/>
                                        </MenuItem.Icon>
                                    </MenuItem>
                                </MenuItem>
                            </Menu>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Favorites Bar -->
                <Border Grid.Row="1"
                        Background="{DynamicResource ThemeBgTertiaryBrush}"
                        Padding="12,8"
                        Visibility="{Binding HasFavorites, Converter={StaticResource BooleanToVisibilityConverter}}">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Star" Foreground="#FFD700" VerticalAlignment="Center" Margin="0,0,8,0"/>
                            <TextBlock Text="Favorites" FontWeight="Medium" VerticalAlignment="Center" Margin="0,0,16,0"/>
                        </StackPanel>
                        <ItemsControl ItemsSource="{Binding FavoriteClips}">
                            <ItemsControl.ItemsPanel>
                                <ItemsPanelTemplate>
                                    <StackPanel Orientation="Horizontal"/>
                                </ItemsPanelTemplate>
                            </ItemsControl.ItemsPanel>
                            <ItemsControl.ItemTemplate>
                                <DataTemplate>
                                    <Button Click="FavoriteClip_Click"
                                            Style="{StaticResource MaterialDesignFlatButton}"
                                            Padding="8,4"
                                            Margin="0,0,4,0"
                                            materialDesign:ButtonAssist.CornerRadius="4"
                                            ToolTip="{Binding Name}">
                                        <StackPanel Orientation="Horizontal">
                                            <Ellipse Width="8" Height="8" Margin="0,0,6,0">
                                                <Ellipse.Fill>
                                                    <SolidColorBrush Color="{Binding Color}"/>
                                                </Ellipse.Fill>
                                            </Ellipse>
                                            <TextBlock Text="{Binding Name}" MaxWidth="80" TextTrimming="CharacterEllipsis"/>
                                        </StackPanel>
                                    </Button>
                                </DataTemplate>
                            </ItemsControl.ItemTemplate>
                        </ItemsControl>
                    </DockPanel>
                </Border>

                <!-- Clips Grid -->
                <ScrollViewer Grid.Row="2" VerticalScrollBarVisibility="Auto" Padding="16">
                    <ItemsControl ItemsSource="{Binding SelectedCategory.Clips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Height="100"
                                        Margin="8"
                                        CornerRadius="{DynamicResource ThemeCornerRadius}"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ClipCard_Click"
                                        MouseMove="ClipCard_MouseMove"
                                        AllowDrop="True"
                                        DragOver="ClipCard_DragOver"
                                        Drop="ClipCard_Drop"
                                        Background="{DynamicResource ThemeBgCardBrush}"
                                        BorderThickness="2"
                                        x:Name="ClipBorder">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="Transparent"/>
                                    </Border.BorderBrush>
                                    <Grid>
                                        <!-- Loop indicator -->
                                        <materialDesign:PackIcon Kind="Repeat"
                                                                 Width="14" Height="14"
                                                                 HorizontalAlignment="Left"
                                                                 VerticalAlignment="Top"
                                                                 Margin="6"
                                                                 Foreground="{DynamicResource ThemeAccentBrush}"
                                                                 Visibility="{Binding IsLooping, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <!-- Favorite indicator -->
                                        <materialDesign:PackIcon Kind="Star"
                                                                 Width="14" Height="14"
                                                                 HorizontalAlignment="Right"
                                                                 VerticalAlignment="Top"
                                                                 Margin="6"
                                                                 Foreground="#FFD700"
                                                                 Visibility="{Binding IsFavorite, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <!-- Play/Stop Icon with clip color -->
                                            <Border x:Name="IconBorder"
                                                    Width="40" Height="40"
                                                    CornerRadius="20"
                                                    HorizontalAlignment="Center">
                                                <Border.Background>
                                                    <SolidColorBrush Color="{Binding Color}"/>
                                                </Border.Background>
                                                <materialDesign:PackIcon x:Name="PlayIcon"
                                                                         Kind="Play"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         Foreground="White"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Text="{Binding Name}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextAlignment="Center"
                                                       MaxWidth="120"
                                                       FontSize="12"
                                                       Margin="8,8,8,0"/>

                                            <!-- Hotkey badge -->
                                            <Border Background="{DynamicResource ThemeBgTertiaryBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="0,4,0,0"
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding Hotkey, Converter={StaticResource EmptyToCollapsed}}">
                                                <TextBlock Text="{Binding Hotkey}" FontSize="10" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Context menu -->
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Rename" Click="EditClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Pencil"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Duplicate" Click="DuplicateClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="ContentCopy"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Set Hotkey" Click="SetHotkey_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Keyboard"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Volume" StaysOpenOnClick="True">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="VolumeHigh"/>
                                                    </MenuItem.Icon>
                                                    <StackPanel Orientation="Horizontal" Margin="8,4">
                                                        <Slider Width="120"
                                                                Minimum="0" Maximum="1"
                                                                Value="{Binding Volume}"
                                                                ValueChanged="ClipVolume_Changed"
                                                                TickFrequency="0.1"
                                                                IsSnapToTickEnabled="False"/>
                                                        <TextBlock Text="{Binding Volume, StringFormat={}{0:P0}}"
                                                                   Width="40"
                                                                   Margin="8,0,0,0"
                                                                   VerticalAlignment="Center"/>
                                                    </StackPanel>
                                                </MenuItem>
                                                <MenuItem Header="Color">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Palette"/>
                                                    </MenuItem.Icon>
                                                    <MenuItem Header="Purple" Click="SetClipColor_Click" Tag="#9D4EDD">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#9D4EDD"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Pink" Click="SetClipColor_Click" Tag="#E91E63">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#E91E63"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Red" Click="SetClipColor_Click" Tag="#F44336">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#F44336"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Orange" Click="SetClipColor_Click" Tag="#FF9800">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#FF9800"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Yellow" Click="SetClipColor_Click" Tag="#FFEB3B">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#FFEB3B"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Green" Click="SetClipColor_Click" Tag="#4CAF50">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#4CAF50"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Teal" Click="SetClipColor_Click" Tag="#00BCD4">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#00BCD4"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Blue" Click="SetClipColor_Click" Tag="#2196F3">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#2196F3"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                    <MenuItem Header="Gray" Click="SetClipColor_Click" Tag="#607D8B">
                                                        <MenuItem.Icon>
                                                            <Ellipse Width="16" Height="16" Fill="#607D8B"/>
                                                        </MenuItem.Icon>
                                                    </MenuItem>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Loop" IsCheckable="True" IsChecked="{Binding IsLooping}" Click="ToggleLoop_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Repeat"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Favorite" IsCheckable="True" IsChecked="{Binding IsFavorite}" Click="ToggleFavorite_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Star"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Fade Effects">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="TransitionMasked"/>
                                                    </MenuItem.Icon>
                                                    <StackPanel Margin="8,4" Width="180">
                                                        <TextBlock Text="Fade In (seconds)" FontSize="11" Margin="0,0,0,4"/>
                                                        <Slider Minimum="0" Maximum="3"
                                                                Value="{Binding FadeInSeconds}"
                                                                ValueChanged="FadeIn_Changed"
                                                                TickFrequency="0.5"
                                                                IsSnapToTickEnabled="True"/>
                                                        <TextBlock Text="Fade Out (seconds)" FontSize="11" Margin="0,8,0,4"/>
                                                        <Slider Minimum="0" Maximum="3"
                                                                Value="{Binding FadeOutSeconds}"
                                                                ValueChanged="FadeOut_Changed"
                                                                TickFrequency="0.5"
                                                                IsSnapToTickEnabled="True"/>
                                                    </StackPanel>
                                                </MenuItem>
                                                <MenuItem Header="Speed/Pitch">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Speedometer"/>
                                                    </MenuItem.Icon>
                                                    <StackPanel Margin="8,4" Width="200">
                                                        <DockPanel>
                                                            <TextBlock Text="Speed" FontSize="11" DockPanel.Dock="Left"/>
                                                            <TextBlock Text="{Binding PlaybackSpeed, StringFormat={}{0:0.0}x}" FontSize="11" DockPanel.Dock="Right" HorizontalAlignment="Right"/>
                                                        </DockPanel>
                                                        <Slider Minimum="0.5" Maximum="2.0"
                                                                Value="{Binding PlaybackSpeed}"
                                                                ValueChanged="PlaybackSpeed_Changed"
                                                                TickFrequency="0.1"
                                                                IsSnapToTickEnabled="True"
                                                                Margin="0,4,0,8"/>
                                                        <DockPanel>
                                                            <TextBlock Text="Pitch" FontSize="11" DockPanel.Dock="Left"/>
                                                            <TextBlock FontSize="11" DockPanel.Dock="Right" HorizontalAlignment="Right">
                                                                <TextBlock.Text>
                                                                    <Binding Path="PitchSemitones" StringFormat="{}{0:+#;-#;0} semitones"/>
                                                                </TextBlock.Text>
                                                            </TextBlock>
                                                        </DockPanel>
                                                        <Slider Minimum="-12" Maximum="12"
                                                                Value="{Binding PitchSemitones}"
                                                                ValueChanged="PitchSemitones_Changed"
                                                                TickFrequency="1"
                                                                IsSnapToTickEnabled="True"
                                                                Margin="0,4,0,0"/>
                                                    </StackPanel>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Add to Queue" Click="AddToQueue_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="PlaylistPlus"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <Separator/>
                                                <MenuItem Header="Delete" Click="DeleteClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Delete"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter TargetName="ClipBorder" Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                                        <Setter TargetName="PlayIcon" Property="Kind" Value="Stop"/>
                                        <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                                        <Setter TargetName="PlayIcon" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty state -->
                <Border Grid.Row="2"
                        Visibility="{Binding SelectedCategory.Clips.Count, Converter={StaticResource ZeroToVisible}, FallbackValue=Visible}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="{DynamicResource ThemeBgTertiaryBrush}" Width="64" Height="64" CornerRadius="32">
                            <materialDesign:PackIcon Kind="MusicNote" Width="32" Height="32"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                        </Border>
                        <TextBlock Text="No clips yet" FontSize="16" Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,16,0,4" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drag and drop audio files or click Import" Foreground="{DynamicResource ThemeTextMutedBrush}" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Status Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource ThemeBgSecondaryBrush}"
                Padding="20,12">
            <DockPanel>
                <StackPanel DockPanel.Dock="Left" Orientation="Horizontal">
                    <materialDesign:PackIcon Kind="Information" VerticalAlignment="Center" Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,0,8,0"/>
                    <TextBlock Text="Tip: Use Streamlabs Application Audio Capture to stream soundboard audio"
                               VerticalAlignment="Center"
                               Foreground="{DynamicResource ThemeTextMutedBrush}"
                               FontSize="12"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
