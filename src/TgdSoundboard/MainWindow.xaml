<Window x:Class="TgdSoundboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TgdSoundboard"
        mc:Ignorable="d"
        Title="TGD Soundboard"
        Height="750" Width="1200"
        MinHeight="550" MinWidth="900"
        Background="{DynamicResource ThemeBgPrimaryBrush}"
        TextElement.Foreground="{DynamicResource ThemeTextPrimaryBrush}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver"
        WindowStyle="None"
        ResizeMode="CanResizeWithGrip"
        AllowsTransparency="True">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Custom Title Bar -->
        <Border Grid.Row="0" Background="{DynamicResource ThemeHeaderGradient}" MouseLeftButtonDown="TitleBar_MouseLeftButtonDown">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Window Controls Row -->
                <DockPanel Grid.Row="0" Height="32">
                    <StackPanel DockPanel.Dock="Right" Orientation="Horizontal">
                        <Button Click="Minimize_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon Kind="WindowMinimize" Width="16" Height="16"/>
                        </Button>
                        <Button Click="Maximize_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon x:Name="MaximizeIcon" Kind="WindowMaximize" Width="16" Height="16"/>
                        </Button>
                        <Button Click="Close_Click" Style="{StaticResource MaterialDesignFlatButton}"
                                Width="46" Height="32" Padding="0" Foreground="{DynamicResource ThemeTextPrimaryBrush}">
                            <materialDesign:PackIcon Kind="Close" Width="16" Height="16"/>
                        </Button>
                    </StackPanel>
                    <TextBlock Text="" DockPanel.Dock="Left"/>
                </DockPanel>

                <!-- Header Content -->
                <DockPanel Grid.Row="1" Margin="20,0,20,16">
                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                        <Border Background="{DynamicResource ThemeAccentGradient}" CornerRadius="8" Padding="8,4" VerticalAlignment="Center">
                            <materialDesign:PackIcon Kind="MusicNote" Width="24" Height="24"/>
                        </Border>
                        <TextBlock Text="TGD SOUNDBOARD" FontSize="18" FontWeight="Bold" Margin="12,0,0,0" VerticalAlignment="Center"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <!-- Theme Selector -->
                        <ComboBox x:Name="ThemeSelector"
                                  Width="100"
                                  Margin="0,0,12,0"
                                  VerticalAlignment="Center"
                                  Style="{StaticResource MaterialDesignComboBox}"
                                  SelectionChanged="ThemeSelector_SelectionChanged">
                            <ComboBoxItem Content="Purple" Tag="Purple"/>
                            <ComboBoxItem Content="Cyan" Tag="Cyan"/>
                            <ComboBoxItem Content="Neon" Tag="Neon" IsSelected="True"/>
                        </ComboBox>

                        <!-- Mixer Button -->
                        <Button Click="OpenMixer_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="{DynamicResource ThemeBgTertiaryBrush}"
                                Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                Padding="12,6"
                                Margin="0,0,12,0"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="TuneVertical" VerticalAlignment="Center"/>
                                <TextBlock Text="Mixer" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <!-- Master Volume -->
                        <Border Background="{DynamicResource ThemeBgTertiaryBrush}" CornerRadius="8" Padding="12,6" Margin="0,0,12,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                <Slider x:Name="MasterVolumeSlider"
                                        Width="80"
                                        Minimum="0" Maximum="1"
                                        Value="{Binding MasterVolume}"
                                        VerticalAlignment="Center"
                                        Margin="8,0"/>
                                <TextBlock Text="{Binding MasterVolume, StringFormat={}{0:P0}}"
                                           Width="40"
                                           VerticalAlignment="Center"
                                           Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                            </StackPanel>
                        </Border>

                        <!-- Stop All Button -->
                        <Button Click="StopAll_Click"
                                Style="{StaticResource MaterialDesignFlatButton}"
                                Background="{DynamicResource ThemeDangerBrush}"
                                Foreground="White"
                                Padding="12,6"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                                <TextBlock Text="Stop All" Margin="6,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>
            </Grid>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category Sidebar -->
            <Border Grid.Column="0" Background="{DynamicResource ThemeBgSecondaryBrush}">
                <DockPanel>
                    <!-- Header -->
                    <Border DockPanel.Dock="Top" Padding="16,16,16,8">
                        <TextBlock Text="CATEGORIES" FontSize="11" FontWeight="Bold" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                    </Border>

                    <!-- Add Category Button - AT BOTTOM -->
                    <Border DockPanel.Dock="Bottom" Padding="12" Background="{DynamicResource ThemeBgTertiaryBrush}">
                        <Button Style="{StaticResource MaterialDesignOutlinedButton}"
                                Command="{Binding AddCategoryCommand}"
                                BorderBrush="{DynamicResource ThemeTextMutedBrush}"
                                Foreground="{DynamicResource ThemeTextSecondaryBrush}"
                                HorizontalAlignment="Stretch"
                                Height="36"
                                materialDesign:ButtonAssist.CornerRadius="8">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="Add Category" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </Border>

                    <!-- Category List -->
                    <ListBox ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Background="Transparent"
                             BorderThickness="0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <Border Padding="12,10" Margin="6,2" CornerRadius="{DynamicResource ThemeCornerRadius}" x:Name="ItemBorder">
                                    <DockPanel>
                                        <Border Width="3" CornerRadius="2" Margin="0,0,12,0" DockPanel.Dock="Left"
                                                Background="{DynamicResource ThemeAccentBrush}"/>
                                        <StackPanel>
                                            <TextBlock Text="{Binding Name}" FontSize="14" FontWeight="Medium"/>
                                            <TextBlock FontSize="11" Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,2,0,0">
                                                <TextBlock.Text>
                                                    <MultiBinding StringFormat="{}{0} clips">
                                                        <Binding Path="Clips.Count"/>
                                                    </MultiBinding>
                                                </TextBlock.Text>
                                            </TextBlock>
                                        </StackPanel>
                                    </DockPanel>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsSelected, RelativeSource={RelativeSource AncestorType=ListBoxItem}}" Value="True">
                                        <Setter TargetName="ItemBorder" Property="Background" Value="{DynamicResource ThemeBgTertiaryBrush}"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem">
                                <Setter Property="Template">
                                    <Setter.Value>
                                        <ControlTemplate TargetType="ListBoxItem">
                                            <ContentPresenter/>
                                        </ControlTemplate>
                                    </Setter.Value>
                                </Setter>
                                <Setter Property="Cursor" Value="Hand"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Sound Clips Grid -->
            <Grid Grid.Column="1" Background="{DynamicResource ThemeBgPrimaryBrush}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Header -->
                <Border Grid.Row="0" Padding="24,16" Background="{DynamicResource ThemeBgSecondaryBrush}">
                    <DockPanel>
                        <StackPanel DockPanel.Dock="Left">
                            <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='General'}"
                                       FontSize="24" FontWeight="Bold"/>
                            <TextBlock Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,4,0,0">
                                <TextBlock.Text>
                                    <MultiBinding StringFormat="{}{0} sound clips">
                                        <Binding Path="SelectedCategory.Clips.Count" FallbackValue="0"/>
                                    </MultiBinding>
                                </TextBlock.Text>
                            </TextBlock>
                        </StackPanel>

                        <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                            <Button Click="ImportAndTrim_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{DynamicResource ThemeBgTertiaryBrush}"
                                    Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                                    Padding="14,8"
                                    Margin="0,0,8,0"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="ContentCut" VerticalAlignment="Center"/>
                                    <TextBlock Text="Clip from Song" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                            <Button Click="ImportClip_Click"
                                    Style="{StaticResource MaterialDesignFlatButton}"
                                    Background="{DynamicResource ThemeAccentBrush}"
                                    Foreground="White"
                                    Padding="14,8"
                                    materialDesign:ButtonAssist.CornerRadius="8">
                                <StackPanel Orientation="Horizontal">
                                    <materialDesign:PackIcon Kind="Upload" VerticalAlignment="Center"/>
                                    <TextBlock Text="Import" Margin="8,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>
                            </Button>
                        </StackPanel>
                    </DockPanel>
                </Border>

                <!-- Clips Grid -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="16">
                    <ItemsControl ItemsSource="{Binding SelectedCategory.Clips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <Border Width="140" Height="100"
                                        Margin="8"
                                        CornerRadius="{DynamicResource ThemeCornerRadius}"
                                        Cursor="Hand"
                                        MouseLeftButtonDown="ClipCard_Click"
                                        Background="{DynamicResource ThemeBgCardBrush}"
                                        BorderThickness="2"
                                        x:Name="ClipBorder">
                                    <Border.BorderBrush>
                                        <SolidColorBrush Color="Transparent"/>
                                    </Border.BorderBrush>
                                    <Grid>
                                        <StackPanel VerticalAlignment="Center" HorizontalAlignment="Center">
                                            <!-- Play/Stop Icon -->
                                            <Border x:Name="IconBorder"
                                                    Width="40" Height="40"
                                                    CornerRadius="20"
                                                    Background="{DynamicResource ThemeBgTertiaryBrush}"
                                                    HorizontalAlignment="Center">
                                                <materialDesign:PackIcon x:Name="PlayIcon"
                                                                         Kind="Play"
                                                                         Width="20" Height="20"
                                                                         HorizontalAlignment="Center"
                                                                         VerticalAlignment="Center"
                                                                         Foreground="{DynamicResource ThemeTextSecondaryBrush}"/>
                                            </Border>

                                            <!-- Name -->
                                            <TextBlock Text="{Binding Name}"
                                                       TextTrimming="CharacterEllipsis"
                                                       TextAlignment="Center"
                                                       MaxWidth="120"
                                                       FontSize="12"
                                                       Margin="8,8,8,0"/>

                                            <!-- Hotkey badge -->
                                            <Border Background="{DynamicResource ThemeBgTertiaryBrush}"
                                                    CornerRadius="4"
                                                    Padding="6,2"
                                                    Margin="0,4,0,0"
                                                    HorizontalAlignment="Center"
                                                    Visibility="{Binding Hotkey, Converter={StaticResource EmptyToCollapsed}}">
                                                <TextBlock Text="{Binding Hotkey}" FontSize="10" Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                                            </Border>
                                        </StackPanel>

                                        <!-- Context menu -->
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit" Click="EditClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Pencil"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                                <MenuItem Header="Delete" Click="DeleteClip_Click">
                                                    <MenuItem.Icon>
                                                        <materialDesign:PackIcon Kind="Delete"/>
                                                    </MenuItem.Icon>
                                                </MenuItem>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                </Border>
                                <DataTemplate.Triggers>
                                    <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                        <Setter TargetName="ClipBorder" Property="BorderBrush" Value="{DynamicResource ThemeAccentBrush}"/>
                                        <Setter TargetName="PlayIcon" Property="Kind" Value="Stop"/>
                                        <Setter TargetName="IconBorder" Property="Background" Value="{DynamicResource ThemeAccentBrush}"/>
                                        <Setter TargetName="PlayIcon" Property="Foreground" Value="White"/>
                                    </DataTrigger>
                                </DataTemplate.Triggers>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty state -->
                <Border Grid.Row="1"
                        Visibility="{Binding SelectedCategory.Clips.Count, Converter={StaticResource ZeroToVisible}, FallbackValue=Visible}">
                    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
                        <Border Background="{DynamicResource ThemeBgTertiaryBrush}" Width="64" Height="64" CornerRadius="32">
                            <materialDesign:PackIcon Kind="MusicNote" Width="32" Height="32"
                                                     HorizontalAlignment="Center" VerticalAlignment="Center"
                                                     Foreground="{DynamicResource ThemeTextMutedBrush}"/>
                        </Border>
                        <TextBlock Text="No clips yet" FontSize="16" Foreground="{DynamicResource ThemeTextMutedBrush}" Margin="0,16,0,4" HorizontalAlignment="Center"/>
                        <TextBlock Text="Drag and drop audio files or click Import" Foreground="{DynamicResource ThemeTextMutedBrush}" HorizontalAlignment="Center" FontSize="12"/>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>

        <!-- Bottom Audio Routing Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource ThemeBgSecondaryBrush}"
                Padding="20,12">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <!-- Virtual Cable Status -->
                <StackPanel Grid.Column="0" Orientation="Horizontal">
                    <Ellipse Width="8" Height="8" Fill="{DynamicResource ThemeSuccessBrush}" Margin="0,0,8,0" VerticalAlignment="Center"/>
                    <TextBlock Text="Virtual Cable" VerticalAlignment="Center" Margin="0,0,16,0"/>

                    <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="{Binding IsRoutingActive}"
                                  Command="{Binding ToggleRoutingCommand}"
                                  VerticalAlignment="Center"/>
                    <TextBlock Text="Play"
                               VerticalAlignment="Center"
                               Margin="8,0,24,0"/>

                    <Button Click="OpenAppRouting_Click"
                            Style="{StaticResource MaterialDesignFlatButton}"
                            Background="{DynamicResource ThemeBgTertiaryBrush}"
                            Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                            Padding="12,6"
                            materialDesign:ButtonAssist.CornerRadius="8">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="ApplicationCog" VerticalAlignment="Center"/>
                            <TextBlock Text="App Routing" Margin="6,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>

                <!-- Pass-through options -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" HorizontalAlignment="Right">
                    <CheckBox Content="Pass System Audio"
                              IsChecked="{Binding PassSystemAudio}"
                              Foreground="{DynamicResource ThemeTextPrimaryBrush}"
                              Margin="0,0,24,0"/>

                    <CheckBox Content="Pass Microphone"
                              IsChecked="{Binding PassMicrophone}"
                              Foreground="{DynamicResource ThemeTextPrimaryBrush}"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
