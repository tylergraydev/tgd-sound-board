<Window x:Class="TgdSoundboard.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:local="clr-namespace:TgdSoundboard"
        mc:Ignorable="d"
        Title="TGD Soundboard"
        Height="700" Width="1100"
        MinHeight="500" MinWidth="800"
        Background="{DynamicResource MaterialDesign.Brush.Background}"
        TextElement.Foreground="{DynamicResource MaterialDesign.Brush.Foreground}"
        TextElement.FontWeight="Regular"
        TextElement.FontSize="13"
        TextOptions.TextFormattingMode="Ideal"
        TextOptions.TextRenderingMode="Auto"
        FontFamily="{DynamicResource MaterialDesignFont}"
        AllowDrop="True"
        Drop="Window_Drop"
        DragOver="Window_DragOver">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <materialDesign:ColorZone Mode="PrimaryMid" Padding="16" Grid.Row="0">
            <DockPanel>
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="VolumeHigh" Width="28" Height="28" VerticalAlignment="Center"/>
                    <TextBlock Text="TGD Soundboard" FontSize="20" FontWeight="Medium" Margin="10,0,0,0" VerticalAlignment="Center"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <!-- Master Volume -->
                    <materialDesign:PackIcon Kind="VolumeHigh" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <Slider x:Name="MasterVolumeSlider"
                            Width="120"
                            Minimum="0" Maximum="1"
                            Value="{Binding MasterVolume}"
                            VerticalAlignment="Center"/>
                    <TextBlock Text="{Binding MasterVolume, StringFormat={}{0:P0}}"
                               Width="45"
                               VerticalAlignment="Center"
                               Margin="8,0,20,0"/>

                    <!-- Stop All Button -->
                    <Button Style="{StaticResource MaterialDesignFlatSecondaryLightBgButton}"
                            Command="{Binding StopAllCommand}"
                            Margin="8,0,0,0"
                            ToolTip="Stop All Clips">
                        <StackPanel Orientation="Horizontal">
                            <materialDesign:PackIcon Kind="Stop" VerticalAlignment="Center"/>
                            <TextBlock Text="Stop All" Margin="8,0,0,0" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </DockPanel>
        </materialDesign:ColorZone>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="220"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <!-- Category Sidebar -->
            <Border Grid.Column="0"
                    Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                    BorderBrush="{DynamicResource MaterialDesign.Brush.TextBox.HoverBackground}"
                    BorderThickness="0,0,1,0">
                <DockPanel>
                    <StackPanel DockPanel.Dock="Top" Margin="12">
                        <TextBlock Text="CATEGORIES"
                                   FontSize="12"
                                   FontWeight="Medium"
                                   Opacity="0.6"
                                   Margin="4,0,0,12"/>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Command="{Binding AddCategoryCommand}"
                                HorizontalAlignment="Stretch">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="Plus" VerticalAlignment="Center"/>
                                <TextBlock Text="Add Category" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>

                    <ListBox ItemsSource="{Binding Categories}"
                             SelectedItem="{Binding SelectedCategory}"
                             Margin="0,8,0,0">
                        <ListBox.ItemTemplate>
                            <DataTemplate>
                                <DockPanel Margin="4">
                                    <Ellipse Width="12" Height="12" DockPanel.Dock="Left" Margin="0,0,12,0">
                                        <Ellipse.Fill>
                                            <SolidColorBrush Color="{Binding Color}"/>
                                        </Ellipse.Fill>
                                    </Ellipse>
                                    <TextBlock Text="{Binding Name}"
                                               VerticalAlignment="Center"
                                               FontSize="14"/>
                                </DockPanel>
                            </DataTemplate>
                        </ListBox.ItemTemplate>
                        <ListBox.ItemContainerStyle>
                            <Style TargetType="ListBoxItem" BasedOn="{StaticResource MaterialDesignListBoxItem}">
                                <Setter Property="Padding" Value="12,10"/>
                            </Style>
                        </ListBox.ItemContainerStyle>
                    </ListBox>
                </DockPanel>
            </Border>

            <!-- Sound Clips Grid -->
            <Grid Grid.Column="1" Margin="16">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>

                <!-- Category Header -->
                <DockPanel Grid.Row="0" Margin="0,0,0,16">
                    <TextBlock Text="{Binding SelectedCategory.Name, FallbackValue='Select a Category'}"
                               FontSize="24"
                               FontWeight="Medium"
                               DockPanel.Dock="Left"
                               VerticalAlignment="Center"/>

                    <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Click="ImportClip_Click"
                                ToolTip="Import Audio File">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="FileMusic" VerticalAlignment="Center"/>
                                <TextBlock Text="Import Clip" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        <Button Style="{StaticResource MaterialDesignFlatButton}"
                                Click="ImportAndTrim_Click"
                                ToolTip="Import and trim a song"
                                Margin="8,0,0,0">
                            <StackPanel Orientation="Horizontal">
                                <materialDesign:PackIcon Kind="ContentCut" VerticalAlignment="Center"/>
                                <TextBlock Text="Clip from Song" Margin="8,0,0,0" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                    </StackPanel>
                </DockPanel>

                <!-- Clips Grid -->
                <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto">
                    <ItemsControl ItemsSource="{Binding SelectedCategory.Clips}">
                        <ItemsControl.ItemsPanel>
                            <ItemsPanelTemplate>
                                <WrapPanel/>
                            </ItemsPanelTemplate>
                        </ItemsControl.ItemsPanel>
                        <ItemsControl.ItemTemplate>
                            <DataTemplate>
                                <materialDesign:Card Width="140" Height="100"
                                                     Margin="6"
                                                     Padding="0"
                                                     materialDesign:ElevationAssist.Elevation="Dp2"
                                                     Cursor="Hand"
                                                     MouseLeftButtonDown="ClipCard_Click">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"/>
                                            <RowDefinition Height="Auto"/>
                                        </Grid.RowDefinitions>

                                        <!-- Play indicator background -->
                                        <Border Grid.RowSpan="2" CornerRadius="4">
                                            <Border.Style>
                                                <Style TargetType="Border">
                                                    <Setter Property="Background" Value="Transparent"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                            <Setter Property="Background" Value="{DynamicResource MaterialDesign.Brush.Primary}"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Border.Style>
                                        </Border>

                                        <!-- Icon -->
                                        <materialDesign:PackIcon Grid.Row="0"
                                                                 HorizontalAlignment="Center"
                                                                 VerticalAlignment="Center"
                                                                 Width="32" Height="32">
                                            <materialDesign:PackIcon.Style>
                                                <Style TargetType="materialDesign:PackIcon">
                                                    <Setter Property="Kind" Value="Play"/>
                                                    <Style.Triggers>
                                                        <DataTrigger Binding="{Binding IsPlaying}" Value="True">
                                                            <Setter Property="Kind" Value="Stop"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </materialDesign:PackIcon.Style>
                                        </materialDesign:PackIcon>

                                        <!-- Name and hotkey -->
                                        <StackPanel Grid.Row="1" Margin="8,4,8,8">
                                            <TextBlock Text="{Binding Name}"
                                                       TextTrimming="CharacterEllipsis"
                                                       FontSize="12"
                                                       HorizontalAlignment="Center"/>
                                            <TextBlock Text="{Binding Hotkey}"
                                                       FontSize="10"
                                                       Opacity="0.6"
                                                       HorizontalAlignment="Center"
                                                       Visibility="{Binding Hotkey, Converter={StaticResource EmptyToCollapsed}}"/>
                                        </StackPanel>

                                        <!-- Context menu -->
                                        <Grid.ContextMenu>
                                            <ContextMenu>
                                                <MenuItem Header="Edit" Click="EditClip_Click"/>
                                                <MenuItem Header="Delete" Click="DeleteClip_Click"/>
                                            </ContextMenu>
                                        </Grid.ContextMenu>
                                    </Grid>
                                </materialDesign:Card>
                            </DataTemplate>
                        </ItemsControl.ItemTemplate>
                    </ItemsControl>
                </ScrollViewer>

                <!-- Empty state -->
                <StackPanel Grid.Row="1"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center"
                            Visibility="{Binding SelectedCategory.Clips.Count, Converter={StaticResource ZeroToVisible}, FallbackValue=Visible}">
                    <materialDesign:PackIcon Kind="MusicNote" Width="64" Height="64" Opacity="0.3" HorizontalAlignment="Center"/>
                    <TextBlock Text="No clips yet" FontSize="18" Opacity="0.5" Margin="0,16,0,8" HorizontalAlignment="Center"/>
                    <TextBlock Text="Drag and drop audio files here or click Import" Opacity="0.4" HorizontalAlignment="Center"/>
                </StackPanel>
            </Grid>
        </Grid>

        <!-- Bottom Audio Routing Bar -->
        <Border Grid.Row="2"
                Background="{DynamicResource MaterialDesign.Brush.Card.Background}"
                BorderBrush="{DynamicResource MaterialDesign.Brush.TextBox.HoverBackground}"
                BorderThickness="0,1,0,0"
                Padding="16,12">
            <DockPanel>
                <!-- Virtual Cable Status -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Left">
                    <materialDesign:PackIcon Kind="CableData" VerticalAlignment="Center" Margin="0,0,8,0"/>
                    <TextBlock Text="Virtual Cable:" VerticalAlignment="Center" Margin="0,0,8,0"/>

                    <ComboBox ItemsSource="{Binding OutputDevices}"
                              SelectedItem="{Binding SelectedVirtualCableDevice}"
                              DisplayMemberPath="Name"
                              Width="200"
                              materialDesign:HintAssist.Hint="Select Virtual Cable"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="8,6"/>

                    <ToggleButton Style="{StaticResource MaterialDesignSwitchToggleButton}"
                                  IsChecked="{Binding IsRoutingActive}"
                                  Command="{Binding ToggleRoutingCommand}"
                                  Margin="16,0,0,0"
                                  ToolTip="Enable/Disable Routing"/>
                    <TextBlock Text="Route Audio" VerticalAlignment="Center" Margin="8,0,0,0"/>
                </StackPanel>

                <!-- Pass-through options -->
                <StackPanel Orientation="Horizontal" DockPanel.Dock="Right" HorizontalAlignment="Right">
                    <CheckBox Content="Pass System Audio"
                              IsChecked="{Binding PassSystemAudio}"
                              Margin="0,0,20,0"/>

                    <CheckBox Content="Pass Microphone"
                              IsChecked="{Binding PassMicrophone}"
                              Margin="0,0,20,0"/>

                    <ComboBox ItemsSource="{Binding InputDevices}"
                              SelectedItem="{Binding SelectedInputDevice}"
                              DisplayMemberPath="Name"
                              Width="180"
                              materialDesign:HintAssist.Hint="Microphone"
                              Style="{StaticResource MaterialDesignOutlinedComboBox}"
                              Padding="8,6"
                              Visibility="{Binding PassMicrophone, Converter={StaticResource BooleanToVisibilityConverter}}"/>
                </StackPanel>
            </DockPanel>
        </Border>
    </Grid>
</Window>
